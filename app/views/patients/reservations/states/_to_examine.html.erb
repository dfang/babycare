<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约时间</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_date.present? %>
        <%= resource.d_date %>
      <% else %>
        <%= resource.p_date %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约地点</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_location.present? %>
        <%= resource.d_location %>
      <% else %>
        <%= resource.p_location %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>症状描述</p>
    </div>
    <div class="weui-cell__hd">
      <img src="data:image/png;base64," alt="" style="width:58px;margin-right:5px;display:block">
    </div>
    <div class="weui-cell__ft"><%= resource.chief_complains %></div>
  </div>
</div>

<div class="weui-cells">
  <div class="weui-panel__hd">
    检查项目
  </div>

  <div class="weui-panel__bd">
  <% if resource.reservation_examinations.any? %>
    <% resource.reservation_examinations.each do |re| %>
      <div class="weui-cell">
        <div class="weui-cell__bd">
            <div class="uploader_title"><%= re.examination.name %></div>
        </div>
        <div class="weui-uploader">
            <div class="weui-uploader__bd">
              <ul class="weui-uploader__files" id="uploaderFiles[<%= re.id %>]">
              </ul>
              <div class="weui-uploader__input-box" id='picker<%= re.id %>'>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>

  <div class="weui-panel__ft">
    <p class="weui-cell weui-cell_link" style="color: #999999;font-size: 0.8em;">请上传检查结果相关图片，最多上传5张。</p>
  </div>
</div>


<div class="weui-btn-area">
  <%= link_to "联系医生", "", class: "weui-btn weui-btn_primary" %>
  <a href="tel:4000719136" class="weui-btn weui-btn_default">拨打客服电话</a>
</div>

<%- content_for :js  do %>

  <%= javascript_pack_tag 'config_js_sdk',  'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'examination_images_uploader',  'data-turbolinks-track': 'reload' %>

<% end %>
