<div class="panel">
  <div class="hd">
    <h1 class="page_title">公共池列表</h1>
  </div>

  <div class="bd">

    <% @reservations.each do |res| %>
      <div class="weui_panel">
        <!-- <div class="weui_panel_hd">文字列表附来源</div> -->
        <div class="weui_panel_bd">
            <div class="weui_media_box weui_media_text">
                <h4 class="weui_media_title"> <%= res.name %>的孩子 </h4>
                <p class="weui_media_desc"> <%= res.remark %></p>
                <ul class="weui_media_info">
                    <%- if current_user && current_user.doctor.present? %>
                      <li class="weui_media_info_meta"><%= res.mobile_phone %></li>
                    <% else %>
                      <li class="weui_media_info_meta"><%= res.marked_phone_number %></li>
                    <% end %>
                    <li class="weui_media_info_meta"><%= res.created_at.strftime('%Y.%m.%d %H:%M') %></li>
                    <li class="weui_media_info_meta weui_media_info_meta_extra"><%= res.location %></li>
                </ul>
    
                <%- if current_user && current_user.doctor.present? %>
                  <%= link_to '认领', claim_reservation_path(res), class: 'weui_btn weui_btn_mini weui_btn_primary' %> 
                <% end %>
            </div>
        </div>
      </div>
    <% end %>
      
      <div class="weui_panel">
        <!-- <div class="weui_panel_hd">文字列表附来源</div> -->
        <div class="weui_panel_bd">
            <div class="weui_media_box weui_media_text">
              <h4 class="weui_media_title">陈女士的女儿</h4>
              <p class="weui_media_desc">流鼻涕</p>
              <ul class="weui_media_info">
                  <li class="weui_media_info_meta">1891324****</li>
                  <li class="weui_media_info_meta">2016.7.14 9:10</li>
                  <li class="weui_media_info_meta weui_media_info_meta_extra">其它信息</li>
              </ul>
              <%- if current_user && current_user.doctor.present? %>
                <%= link_to '认领', claim_reservation_path(Reservation.first), class: 'weui_btn weui_btn_mini weui_btn_primary' %> 
              <% end %>           
            </div>
        </div>        
      </div>

  </div>
</div>