<%= link_to doctors_reservation_path(res), class: "weui-cell weui-cell_access", data: { turbolinks: false} do %>
  <div class="weui-cell__hd">

    <% if res.family_member.present? %>
      <%= image_tag res.family_member.avatar %>
    <% end %>

    <div class="weui_media_status">
      <%- if res.doctor_has_rated? %>
        已评价
      <% else %>
        <%= res.aasm_state_text %>
      <% end %>
    </div>
  </div>
  <div class="weui-cell__bd">
    <p><%= res.user.name %>的<%= res.family_member.gender_text %><%= res.family_member.name %></p>
    <p class="weui-media-box__desc"><%= res.chief_complains %></p>
    <p class="weui-media-box__desc">预约时间: <%= date_format(res.p_date) %></p>
    <p class="weui-media-box__desc">预约地点: <%= res.p_location %></p>
  </div>
  <div class="weui-cell__ft"></div>
<% end %>
