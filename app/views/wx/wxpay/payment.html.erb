<% if @reservation.to_prepay? %>
  <%= render 'to_prepay' %>
<% elsif @reservation.to_pay? %>
  <%= render 'to_pay' %>
<% elsif @reservation.paid? %>
  <%= render 'paid' %>
<% else %>
  <%= render 'payment_status' %>
<% end %>

<%- content_for :js  do %>
  <%= javascript_pack_tag 'payment' %>
<% end %>
