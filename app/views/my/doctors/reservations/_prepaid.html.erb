<div class="msg">
    <div class="weui_msg">
        <div class="weui_icon_area"><i class="weui_icon_info weui_icon_msg"></i></div>
        <div class="weui_text_area">
            <h2 class="weui_msg_title">用户已经支付定金</h2>
            <p class="weui_msg_desc">说明文字</p>
        </div>
        <div class="weui_opr_area">
          <p class="weui_btn_area">
						<%= link_to "确认服务完成", complete_my_doctors_reservation_path(resource), method: 'PUT', class: "weui_btn weui_btn_primary" %>
						<%- if resource.medical_record.present?  %>
							<%= link_to "修改病例", edit_my_doctors_medical_record_path(resource.medical_record, reservation_id: resource, user_id: resource.user_a), class: 'weui_btn weui_btn_primary', data: { turbolinks: "false" } %>
						<% else %>
							<%= link_to "添加病例", new_my_doctors_medical_record_path(reservation_id: resource, user_id: resource.user_a), class: 'weui_btn weui_btn_primary', data: { turbolinks: "false" } %>
						<% end  %>
						<a href="<%= claim_my_doctors_reservation_path(resource) %>" class="weui_btn weui_btn_default">发送短信</a>
            <a href="javascript: IM.call(<%= current_user.id %>, <%= resource.user_a %>, <%= resource.id %>, <%= resource.mobile_phone %>);" class="weui_btn weui_btn_default">拨打电话</a>
          </p>
        </div>
        <div class="weui_extra_area">
            <a href="">查看帮助</a>
        </div>
    </div>
</div>
