<% content_for :title, "我的小孩" %>

<div class="weui-cells weui-cells__access">
  <div class="weui-grids">
    <% @members.each do |member| %>
        <%= link_to patients_family_member_path(member), class: "weui-grid" do %>
            <div class="weui-grid__icon">
                <%= image_tag member.avatar, size: '60x60' %>
            </div>
            <p class="weui-grid__label"><%= member.name %></p>
        <% end %>
    <% end %>
    <a href="/patients/family_members/new" class="weui-grid">
        <div class="weui-grid__icon">
            <img src="/icon_tabbar.png" alt="">
        </div>
        <p class="weui-grid__label">添加</p>
    </a>
  </div>
</div>
<%=  render 'patients/tab_bar' %>
