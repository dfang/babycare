<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约时间</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_date.present? %>
        <%= resource.d_date %>
      <% else %>
        <%= resource.p_date %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约位置</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_location.present? %>
        <%= resource.d_location %>
      <% else %>
        <%= resource.p_location %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>症状描述</p>
    </div>
    <div class="chief-complains_img">
      <img src="data:image/png;base64," alt="" style="width:58px;margin-right:5px;display:block">
    </div>
    <div class="chief-complains"><%= resource.chief_complains %></div>
  </div>
</div>

<div class="weui-cells">
  <% if resource.reservation_examinations.any? %>
    <% resource.reservation_examinations.each do |re| %>
      <div class="weui-cell">
        <div class="weui-cell__bd">
        <%= re.examination.name %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="weui-btn-area">
  <% if resource.medical_record.present? %>
    <%= link_to '修改病历', edit_doctors_medical_record_path(resource.medical_record, reservation_id: resource, user_id: resource.family_member), class: 'weui-btn weui-btn_primary'  %>
  <% else %>
    <%= link_to '填写病历', new_doctors_medical_record_path(reservation_id: resource, user_id: resource.family_member), class: 'weui-btn weui-btn_primary'  %>
  <% end %>
  <%= link_to '查看既往病历', '#', class: 'weui-btn weui-btn_default'  %>
</div>

<%= content_for :js do %>
  <%= javascript_tag do %>
    $(function(){
    })
  <% end %>
<% end %>
