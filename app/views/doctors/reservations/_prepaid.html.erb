<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__hd" style="position: relative;margin-right: 10px;">
        <img src="data:image/png;base64," alt="" style="width:60px;margin-right:5px;display:block">
        <p><%= resource.aasm_state_text %></p>
    </div>
    <div class="weui-cell__bd">
      <div class="weui_media_status">
        <%= resource.family_member.name %>
        <p>
          性别: <%= resource.family_member.gender_text %>
          身高: <%= resource.height %>
          血型: <%= resource.family_member.blood_type %>
          年龄: <%= resource.family_member.birthdate %>
          体重: <%= resource.weight %>
        </p>
      </div>
    </div>

  </div>
</div>

<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>期望时间</p>
    </div>
    <div class="weui-cell__ft"><%= resource.reservation_date %></div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>患者位置</p>
    </div>
    <div class="weui-cell__ft">
      <%= resource.reservation_location %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>症状描述</p>
    </div>
    <div class="weui-cell__hd"><img src="data:image/png;base64," alt="" style="width:58px;margin-right:5px;display:block"></div>
    <div class="weui-cell__ft"><%= resource.chief_complains %></div>
  </div>
</div>


<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__hd">
      <label class="weui-label">预约时间</label>
    </div>
    <div class="weui-cell__bd weui-cell_primary">
      <input class="weui-input" name="reservation[reservation_date]" placeholder="患者来见你的时间" type="datetime-local"  data-parsley-required="true">
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__hd">
      <label class="weui-label">预约地点</label>
    </div>
    <div class="weui-cell__bd weui-cell_primary">
      <input class="weui-input" name="reservation[reservation_date]" placeholder="患者来见你的位置" type="text"  data-parsley-required="true">
    </div>
  </div>
</div>


