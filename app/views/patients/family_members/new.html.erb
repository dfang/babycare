<%= simple_nested_form_for User.new, url: patients_family_members_path, method: 'POST' do |f| %>

  <div class="weui-cell">
      <div class="weui-cell__hd"><label class="weui-label">姓名</label></div>
      <div class="weui-cell__bd">
          <input class="weui-input" type="text" name="user[name]" placeholder="请输入小孩姓名">
      </div>
  </div>

  <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui-label">身份证</label></div>
        <div class="weui-cell__bd">
            <input class="weui-input" type="number" name="user[identity_card]" pattern="[0-9][a-z]*" placeholder="请输入小孩身份证号码">
        </div>
    </div>

  <div class="weui-cell">
    <div class="weui-cell__hd"><label for="" class="weui-label">生日</label></div>
    <div class="weui-cell__bd weui-cell_primary">
      <input class="weui-input" type="date" name="user[birthdate]">
    </div>
  </div>

  <div class="weui-cell weui-cell_select weui-cell_select-after">
    <div class="weui-cell__hd">
        <label for="" class="weui-label">性别</label>
    </div>
    <div class="weui-cell__bd weui-cell_primary">
        <select class="weui-select" name="user[gender]">
          <%= options_for_select MedicalRecord::GENDERS, "男" %>
        </select>
    </div>
  </div>

  <div class="weui-cell weui-cell_select weui-cell_select-after">
    <div class="weui-cell__hd">
        <label for="" class="weui-label">血型</label>
    </div>
    <div class="weui-cell__bd weui-cell_primary">
        <select class="weui-select" name="user[blood_type]">
          <%= options_for_select Setting::BLOOD_TYPES, "A" %>
        </select>
    </div>
  </div>

  <!-- <%= f.input :past_medical_history, as: :text, wrapper: :weui_input %> -->
  <%= f.input :allergic_history, as: :text, wrapper: :weui_input %>
  <!-- <%= f.input :personal_history, as: :text, wrapper: :weui_input %>
  <%= f.input :family_history, as: :text, wrapper: :weui_input %> -->
  <%= f.input :vaccination_history, as: :text, wrapper: :weui_input %>


  <div class="weui-btn-area">
    <!-- <a class="weui-btn weui-btn__primary" href="javascript:">确定</a> -->
    <button class="weui-btn weui-btn_primary">确定</button>
  </div>
<% end %>
