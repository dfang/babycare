<%= simple_form_for resource, url: url, method: method do |f| %>
  <div class='form-inputs'>
    <div class="row">
      <div class='col-md-6'>
        <div class="panel">
          <div class="panel-heading"> 
            <span class="panel-title"> <span class="glyphicon glyphicon-pencil"></span> 基本信息 </span>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label for="name">姓名</label>
              <%= f.input :name, label: false, wrapper: false, input_html: { class: 'form-control' } %>
            </div>
            
            
            <%= f.input :name, wrapper: :fusion_input %>

            <div class="form-group">
              <label> 性别 </label>
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
            </div>

            <div class="form-group">
              <label> 出生年月 </label>
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
            </div>
            
            <div class="form-group">
              <label for="name">邮箱</label>
              <%= f.input :email, label: false, wrapper: false, input_html: { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <label for="wage">手机号</label>
              <%= f.input :mobile_phone, label: false, wrapper: false, input_html: { class: 'form-control' } %>
            </div>
            
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class="panel">
          <div class="panel-heading"> 
            <span class="panel-title"> <span class="glyphicon glyphicon-pencil"></span> 联系方式 </span>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label> 微信号 </label>
              <%= f.input :wechat, label: false, wrapper: false, input_html: { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <label> QQ </label>
              <%= f.input :qq, label: false, wrapper: false, input_html: { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <label> 家庭住址 </label>
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
              <input type="text" class="form-control" maxlength="10" autocomplete="off" placeholder="* Optional">
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

  
  <div class='form-actions'>
    <div class='row'>
      <div class='col-md-12'>
        <button type="submit" class="btn btn-default btn-submit">提交</button>
      </div>
    </div>
  </div>

<% end %>