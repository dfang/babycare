<div class="tabbar">
  <div class="weui-tab">
      <div class="weui-tab__panel">

          <div class="panel">
            <div class="bd">
                <div class="weui-cells__title">带说明的列表项</div>
                <div class="weui-cells">
                  <%= show_medical_record_cell(resource, :birthdate) %>
                  <%= show_medical_record_cell(resource, :gender) %>
                  <%= show_medical_record_cell(resource, :height) %>
                  <%= show_medical_record_cell(resource, :weight) %>
                  <%= show_medical_record_cell(resource, :bmi) %>
                  <%= show_medical_record_cell(resource, :temperature) %>
                  <%= show_medical_record_cell(resource, :pulse) %>
                  <%= show_medical_record_cell(resource, :respiratory_rate) %>
                  <%= show_medical_record_cell(resource, :blood_pressure) %>
                  <%= show_medical_record_cell(resource, :oxygen_saturation) %>
                  <%= show_medical_record_cell(resource, :pain_score) %>
                  <%= show_medical_record_cell(resource, :onset_date) %>
                  <%= show_medical_record_cell(resource, :chief_complaint) %>
                  <%= show_medical_record_cell(resource, :history_of_present_illness) %>
                  <%= show_medical_record_cell(resource, :past_medical_history) %>
                  <%= show_medical_record_cell(resource, :allergic_history) %>
                  <%= show_medical_record_cell(resource, :personal_history) %>
                  <%= show_medical_record_cell(resource, :family_history) %>
                  <%= show_medical_record_cell(resource, :vaccination_history) %>
                  <%= show_medical_record_cell(resource, :physical_examination) %>
                  <%= show_medical_record_cell(resource, :laboratory_and_supplementary_examinations) %>
                  <div class="weui-cell">
  										<div class="weui-cell__bd weui-cell_primary">
  												<div class="weui_uploader weui_uploader1">
  														<div class="weui_uploader_hd weui-cell">
  																<div class="weui-cell__bd weui-cell_primary">实验室检查图片</div>
  														</div>
  														<div class="weui_uploader_bd">
  																<ul class="weui_uploader_files">
                                    <% resource.laboratory_examination_images.each do |image| %>
									                  <li class="weui_uploader_file" style="background-image:url(<%= image.data_url %>)">
  																	</li>
                                    <% end %>
  																</ul>
  														</div>
  												</div>
  										</div>
  								</div>
                  <%= show_medical_record_cell(resource, :imaging_examination) %>
                  <div class="weui-cell">
  										<div class="weui-cell__bd weui-cell_primary">
  												<div class="weui_uploader weui_uploader2">
  														<div class="weui_uploader_hd weui-cell">
  																<div class="weui-cell__bd weui-cell_primary">影像学意见图片</div>
  														</div>
  														<div class="weui_uploader_bd">
  																<ul class="weui_uploader_files">
                                    <% resource.imaging_examination_images.each do |image| %>
                                    <li class="weui_uploader_file" style="background-image:url(<%= image.data_url %>)">
                                    </li>
                                    <% end %>
  																</ul>
  														</div>
  												</div>
  										</div>
  								</div>
                  <%= show_medical_record_cell(resource, :preliminary_diagnosis) %>
                  <%= show_medical_record_cell(resource, :treatment_recommendation) %>
                  <%= show_medical_record_cell(resource, :remarks) %>

              </div>

            </div>
          </div>

      </div>

      <%= render 'tab_bar' %>

  </div>
</div>
