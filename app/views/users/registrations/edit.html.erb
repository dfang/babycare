<div class="weui-cells__title">个人资料</div>
<div class="weui-cells weui-cells_form">
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
		<div class="weui-cell">
			<div class="weui-cell__hd"><label class="weui_label">姓名</label></div>
			<div class="weui-cell__bd weui-cell_primary">
				<%= f.input_field :name, class: 'weui_input' %>
			</div>
		</div>
    <div class="weui-cell">
        <div class="weui-cell__hd"><label class="weui_label">手机号码</label></div>
        <div class="weui-cell__bd weui-cell_primary">
					<%= f.input_field :mobile_phone, class: 'weui_input' %>
        </div>
    </div>
    <div class="weui-cell">
      <div class="weui-cell__hd"><label class="weui_label">居住地址</label></div>
      <div class="weui-cell__bd weui-cell_primary">
        <div class="weui-cell__hd">
					<%= f.input_field :location, class: 'weui_input' %>
				</div>
	    </div>
    </div>

		<div class="weui-cell">
      <div class="weui-cell__bd weui-cell_primary">
        <div class="weui-cell__hd">
					<%= f.button :submit, "确定", class: 'weui-btn weui-btn__primary' %>
				</div>
	    </div>
    </div>
	<% end %>
</div>
