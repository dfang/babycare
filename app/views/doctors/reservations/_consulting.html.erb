<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__hd" style="position: relative;margin-right: 10px;">
      <% if resource.family_member.present? %>
        <%= image_tag resource.family_member.avatar %>
      <% end %>
      <div class="weui_media_status">
        <%= resource.aasm_state_text %>
      </div>
    </div>
    <div class="weui-cell__bd">
        <h4><%= resource.family_member.name %></h4>
        <ul class="weui-cell__bd_ul">
          <li>性别: <%= resource.family_member.gender %></li>
          <li>身高: <%= resource.height %></li>
          <li>血型: <%= resource.family_member.blood_type %></li>
          <li>年龄: <%= resource.family_member.birthdate %></li>
          <li>体重: <%= resource.weight %></li>
        </ul>
    </div>
  </div>
</div>

<div class="weui-cells">
  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约时间</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_date.present? %>
        <%= resource.d_date %>
      <% else %>
        <%= resource.p_date %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>预约位置</p>
    </div>
    <div class="weui-cell__ft">
      <% if resource.d_location.present? %>
        <%= resource.d_location %>
      <% else %>
        <%= resource.p_location %>
      <% end %>
    </div>
  </div>

  <div class="weui-cell">
    <div class="weui-cell__bd">
        <p>症状描述</p>
    </div>
    <div class="chief-complains_img">
      <img src="data:image/png;base64," alt="" style="width:58px;margin-right:5px;display:block">
    </div>
    <div class="chief-complains"><%= resource.chief_complains %></div>
  </div>
</div>

