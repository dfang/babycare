<% content_for :title, "个人中心" %>

<div class="tabbar">
  <div class="weui-tab">

    <div class="weui-tab__panel">
      <div class="panel">
        <div class="page__hd">
          <div class="weui-msg" style="padding: 0;">
            <div class="weui-msg__icon-area">
                <%= image_tag current_user.avatar %>
              </div>
            <div class="weui-msg__text-area" style="margin-bottom: 0;">
                <h2 class="weui-msg__title">
                  <% if current_user.name.present? %>
                    <%= current_user.name %>
                  <% else %>
                    <%= current_user.wechat_authentication.nickname %>
                  <% end %>
                </h2>
            </div>
          </div>
        </div>

        <div class="page__bd">
          <!-- <div class="weui-cells__title">用户后台</div> -->
          <div class="weui-cells weui-cells__access" style="margin-top: 0">
            <div class="weui-grids">

              <a href="/doctors/reservations/available" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-reserve.png" alt="">
                </div>
                <p class="weui-grid__label">我要接单</p>
              </a>

              <a href="/doctors/wallet" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-wallet.png" alt="">
                </div>
                <p class="weui-grid__label">我的钱包</p>
              </a>

              <a href="/doctors/profile" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-profile.png" alt="">
                </div>
                <p class="weui-grid__label">我的资料</p>
              </a>


              <a href="/doctors/reservations" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-reservation.png" alt="">
                </div>
                <p class="weui-grid__label">我的预约</p>
              </a>

              <% unless Rails.env.production? %>
                <a href="javascript:;" class="weui-grid">
                  <div class="weui-grid__icon">
                    <img src="/doctor-scan-qrcode.png" alt="">
                  </div>
                  <p class="weui-grid__label">扫描二维码</p>
                </a>
              <% end %>

              <a href="javascript:;" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-help.png" alt="">
                </div>
                <p class="weui-grid__label">使用帮助</p>
              </a>

              <a href="/feedback" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-feedback.png" alt="">
                </div>
                <p class="weui-grid__label">意见反馈</p>
              </a>

              <a href="/support" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-service.png" alt="">
                </div>
                <p class="weui-grid__label">在线客服</p>
              </a>

              <a href="http://mp.weixin.qq.com/s?__biz=MzAxMDk4MDgwNw==&mid=100000081&idx=1&sn=fb3336e7ea5188b60df5d77eecbae1bf&chksm=1b495df92c3ed4ef3cfdc58ebb9c8dec543d9d1cbd4d5a9c9a68d38255a4c0c00c6750a25cb1&scene=18#wechat_redirect" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/doctor-about.png" alt="">
                </div>
                <p class="weui-grid__label">关于我们</p>
              </a>

              <% unless Rails.env.production? && @browser.wechat?%>
                <a href="/users/sign_out" class="weui-grid" data-method="DELETE" data-turbolinks-tracked="false">
                  <div class="weui-grid__icon">
                    <img src="/sign-out-d.png">
                  </div>
                  <p class="weui-grid__label">退出</p>
                </a>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>

    <%=  render 'tab_bar' %>

  </div>
</div>
