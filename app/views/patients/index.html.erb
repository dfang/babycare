<div class="tabbar">
  <div class="weui-tab">

    <div class="weui-tab__panel">
      <div class="panel">
        <div class="page__hd">
          <div class="weui-msg" style="padding: 0;">
            <div class="weui-msg__icon-area">
                <%= image_tag current_user.avatar %>
              </div>
            <div class="weui-msg__text-area" style="margin-bottom: 0;">
                <h2 class="weui-msg__title"><%= current_user.wechat_authentication.nickname %></h2>
            </div>
          </div>
        </div>

        <div class="page__bd">
          <!-- <div class="weui-cells__title">用户后台</div> -->
          <div class="weui-cells weui-cells__access" style="margin-top: 0">
            <div class="weui-grids">
              <a href="/products/1" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/reserve.png" alt="">
                </div>
                <p class="weui-grid__label">我要预约</p>
              </a>

              <a href="/patients/family_members" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/chidren.png" alt="">
                </div>
                <p class="weui-grid__label">我的小孩</p>
              </a>

              <a href="/patients/settings/edit" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/profile.png" alt="">
                </div>
                <p class="weui-grid__label">我的资料</p>
              </a>

              <a href="/patients/reservations" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/reservation.png" alt="">
                </div>
                <p class="weui-grid__label">我的预约</p>
              </a>

              <a href="<%= qrcode_user_path(current_user) %>" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/qrcode.png" alt="">
                </div>
                <p class="weui-grid__label">我的二维码</p>
              </a>

              <a href="javascript:;" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/help.png" alt="">
                </div>
                <p class="weui-grid__label">使用帮助</p>
              </a>

              <a href="javascript:;" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/feedback.png" alt="">
                </div>
                <p class="weui-grid__label">意见反馈</p>
              </a>

              <a href="javascript:;" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/service.png" alt="">
                </div>
                <p class="weui-grid__label">在线客服</p>
              </a>

              <a href="javascript:;" class="weui-grid">
                <div class="weui-grid__icon">
                  <img src="/about.png" alt="">
                </div>
                <p class="weui-grid__label">关于我们</p>
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>

    <%=  render 'tab_bar' %>

  </div>
</div>
