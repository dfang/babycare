<div id="topbar">
  <div class="topbar-left">
    <ol class="breadcrumb">
      <li class="crumb-active"><a href="tables.html">登记</a></li>
      <li class="crumb-icon"><a href="dashboard.html"><span class="glyphicon glyphicon-home"></span></a></li>
      <li class="crumb-link"><a href="/admin">Home</a></li>
      <li class="crumb-trail">登记</li>
    </ol>
  </div>
  <div class="topbar-right">
    <div class="dashboard-widget-tray">
      <a href='/admin/people/new' class='btn btn-default'> 新建 </a>
    </div>
  </div>
</div>


<div id="content">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-visible">
        <div class="panel-heading">
          <div class="panel-title hidden-xs"> <span class="glyphicon glyphicon-tasks"></span> 登记</div>
        </div>
        <div class="panel-body pbn">
          <table class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
              <tr>
                <th>姓名</th>
                <th>性别</th>
                <th>出生年月</th>
                <th>微信</th>
                <th>手机号</th>
                <th>所在区</th>
                <th class="text-center hidden-xs">操作</th>
              </tr>
            </thead>
            <tbody>
              <% @people.each do |p| %>
                <tr>
                  <td><span class="xedit"><%= link_to admin_person_path(p) do %> <%= p.name %> <% end %></span></td>
                  <td><span class="xedit"><%= p.gender %></span></td>
                  <td><span class="xedit"><%= p.birthdate %></span></td>
                  <td><span class="xedit"><%= p.wechat %></span></td>
                  <td><span class="xedit"><%= p.mobile_phone %></span></td>
                  <td><span class="xedit"><%= p.area_id %></span></td>
                  <td class="hidden-xs text-center"><div class="btn-group">
                    <%= link_to admin_person_path(p), class: 'btn bg-grey2 btn-gradient btn-sm' do %>
                       <span class="glyphicons glyphicons-user"></span> 
                    <% end %>
                    <button type="button" class="btn bg-green2 btn-gradient btn-sm dropdown-toggle" data-toggle="dropdown"> <span class="glyphicons glyphicons-cogwheel"></span> </button>
                    
                    <ul class="dropdown-menu checkbox-persist pull-right text-left" role="menu">
                      <li>
                        <%= link_to admin_person_path(p) do %>
                          <i class="fa fa-envelope-o"></i> 
                          查看 
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_admin_person_path(p) do %>
                          <i class="fa fa-envelope-o"></i> 
                          编辑 
                        <% end %>
                      </li>

                      <li>
                        <%= link_to admin_person_medical_record_path(p) do %>
                          <i class="fa fa-envelope-o"></i> 
                          病历
                        <% end %>
                      </li>

                      <li><a><i class="fa fa-user"></i> View Profile </a></li>
                      <li><a><i class="fa fa-envelope-o"></i> Message </a></li>
                    </ul>
                  </div></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>